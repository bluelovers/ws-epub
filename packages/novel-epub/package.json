    "cjk-conv": "^1.2.143",
    "crlf-normalize": "^1.0.19",
    "debug-color2": "^1.3.2",
    "deepmerge-plus": "^2.1.3",
    "epub-maker2": "^3.0.16",
    "execall2": "^2.0.23",
    "fs-iconv": "^3.1.17",
    "is-relative": "^1.0.0",
    "lazy-url": "^2.0.4",
    "lodash": "^4.17.21",
    "markdown-it": "^13.0.1",
    "markdown-it-emoji": "^2.0.2",
    "markdown-it-footnote": "^3.0.3",
    "markdown-it-implicit-figures": "^0.12.0",
