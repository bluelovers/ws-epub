    "moment": "^2.29.4",
    "node-novel-globby": "^2.0.23",
    "node-novel-info": "^3.0.16",
    "path-dir-normalize": "^1.0.29",
    "regexp-cjk": "^3.3.110",
    "regexp-cjk-plugin-extra": "^1.0.42",
    "str-util": "^2.3.40",
    "transliteration": "^2.3.5",
    "tslib": "^2.6.2",
    "uuid-by-string": "^4.0.0",
    "yargs": "^17.7.2"
  }
